<h1>Users</h1>
	<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.first_name %>
			<%= user.last_name %></td>
			<td><%= user.email_address %></td>
		</tr>
		<% end %>
	</tbody>
	</table>

	<form action="/users/new" method="get">
		<input class="btn btn-danger" type="submit" value="New User" />
	</form>

